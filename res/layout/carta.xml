<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/blanco"
    android:gravity="center"
    android:orientation="horizontal" >

    <com.aforma.mewaiter.utils.ActionBar
        android:id="@+id/actionBarCarta"
        style="@style/ActionBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/actionbar_background" >

        <ImageButton
            android:id="@+id/btnPedidoCarta"
            style="@style/ActionBarItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@android:drawable/ic_menu_agenda"
            android:textColor="@color/blanco" />

        <Button
            android:id="@+id/btnVolverCarta"
            style="@style/Buttonmystyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ab_transparent_mewaiter"
            android:text="&lt; Volver"
            android:textSize="@dimen/small" />

    </com.aforma.mewaiter.utils.ActionBar>

    <ListView
        android:id="@+id/menus"
        style="@style/ListViewmystyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/actionBarCarta"
        android:clickable="true"
        android:drawSelectorOnTop="true"
        android:numColumns="1" >

    </ListView>

</RelativeLayout>