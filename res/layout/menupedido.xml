<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="bottom" >

    <Button
        android:id="@+id/btnCancel2"
        style="@style/Buttonmystyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/btn_redondeado_gris"
        android:text="Cancel"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/btnFactura"
        style="@style/Buttonmystyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCancel2"
        android:layout_alignParentLeft="true"
        android:text="Sacar Factura"
        android:textColor="@color/blanco"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btnSegundos"
        style="@style/Buttonmystyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnFactura"
        android:layout_alignParentLeft="true"
        android:text="Marchar Segundos"
        android:textSize="18sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btnAbrirMesa"
        style="@style/Buttonmystyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSegundos"
        android:text="Abrir Mesa"
        android:textSize="18sp"
        android:textStyle="normal" />

</RelativeLayout>
